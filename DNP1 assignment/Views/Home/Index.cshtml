@model IEnumerable<DNP1_assignment.Models.Movie>
@{
    ViewData["Title"] = "Home Page";
    <h3>@ViewData["Message"]</h3>

}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adult)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Release_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adult)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origin)
                </td>
                <td>
                    <img src="@item.Poster_path" height="42" width="42" />;
                </td>
                <td>
                    <button type="button"><a asp-action="BookNow" asp-route-id="@item.Id">BookNow</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>
